{% extends 'IlcfranceOrangetoolsResBundle::admin.template.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_orangetools_admin_homepage')}}"> {{ faIco('home')}} {{ 'ilcfrance.orangetools.admin.homepage.breadcrumb'|trans }}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_orangetools_admin_admin_list')}}"> {{ faIco('user-md')}} {{ 'ilcfrance.orangetools.admin.Admin.list.breadcrumb'|trans }}</a></li>
</ol>
{%endblock breadcrumb%}
{%block maincontent%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_orangetools_admin_admin_list') }}" class="btn btn-default">{{ faIco('list') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_admin_addGet') }}" class="btn btn-default">{{ faIco('plus') }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ faIco('user-md')}} <i class="fa fa-list text-aqua"></i> {{ 'ilcfrance.orangetools.admin.Admin.list.tlabel'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="adminList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'ilcfrance.orangetools.admin.Admin.fullName.label'|trans|raw }}</th>
							<th>{{ 'ilcfrance.orangetools.admin.Admin.username.label'|trans|raw }}</th>
							<th>{{ 'ilcfrance.orangetools.admin.Admin.email.label'|trans|raw }}</th>
							<th>{{ 'ilcfrance.orangetools.admin.Admin.dtCrea.label'|trans|raw }}</th>
							<th>{{ 'actions.label'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
					{% if admins|length != 0 %}
						{% for admin in admins %}
						<tr>
							<td>{{ admin.fullName }}</td>
							<td>{{ admin.username }}</td>
							<td><a href="mailto:{{ admin.email }}">{{ admin.email }}</a></td>
							<td class="text-right">{{ admin.dtCrea|date('Y-m-d') }} {{ admin.dtCrea|localeDate('none', 'long') }}</td>
							<td class="text-right">
								<a class="btn btn-sm btn-info" href="{{path('ilcfrance_orangetools_admin_admin_editGet',{'id':admin.id})}}">{{ faIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmAdmin" href="{{path('ilcfrance_orangetools_admin_admin_delete',{'id':admin.id})}}">{{ faIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="5">{{ 'User.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmAdmin" class="modal fade in" tabindex="-1" style="display: none;">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="text-center">{{'ilcfrance.orangetools.admin.Admin.delete.confirm.title'|trans|raw}}</h3>
	</div>
	<div class="modal-body">
		{{'ilcfrance.orangetools.admin.Admin.delete.confirm.txt'|trans|raw}}
	</div>
	<div class="modal-footer">
		<a href="" class="btn btn-xs btn-danger danger">{{'action.ok'|trans|raw}}</a>
		<button type="button" class="btn btn-xs btn-default" data-dismiss="modal">{{'action.cancel'|trans|raw}}</button>
	</div>
</div>
{%endblock maincontent%}
