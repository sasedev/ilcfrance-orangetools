{% extends 'IlcfranceOrangetoolsResBundle::admin.template.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_orangetools_admin_homepage')}}"> {{ faIco('home')}} {{ 'ilcfrance.orangetools.admin.homepage.breadcrumb'|trans }}</a></li>
	<li><a href="{{ path('ilcfrance_orangetools_admin_groupmodule_list')}}"> {{ faIco('object-group')}} {{ 'ilcfrance.orangetools.admin.Groupmodule.list.breadcrumb'|trans }}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_orangetools_admin_groupmodule_addGet')}}"> {{ faIco('plus')}} {{ 'ilcfrance.orangetools.admin.Groupmodule.add.breadcrumb'|trans }}</a></li>
</ol>
{%endblock breadcrumb%}
{%block maincontent%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_list') }}" class="btn btn-default">{{ faIco('list') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_export') }}" class="btn btn-default">{{ faIco('file-excel-o') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_addGet') }}" class="btn btn-default">{{ faIco('plus') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_importGet') }}" class="btn btn-default">{{ faIco('plus-circle') }}</a>
		</div>
		<div class="box box-danger">
			<div class="box-header">
				<h3 class="box-title">{{ faIco('object-group')}} <i class="fa fa-plus text-red"></i> {{ 'ilcfrance.orangetools.admin.Groupmodule.add.tlabel'|trans|raw}}</h3>
			</div>
			<div class="box-body">
				{{form_start(GroupmoduleNewForm, {'method':'POST', 'action': path('ilcfrance_orangetools_admin_groupmodule_addPost'), 'style': 'horizontal'})}}
				{{form_row(GroupmoduleNewForm.name, {'label_col': 3, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.admin.GroupmoduleNewForm.name.placeholder'}, 'input_group': {'append': faIco('info')} })}}
				<div class="form-group"><div class="col-lg-offset-3 col-lg-4">
					<button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.admin.GroupmoduleNewForm.btnSubmit'|trans|raw}}</button>
				</div></div>
				{{form_end(GroupmoduleNewForm)}}
			</div>
		</div>
	</div>
</div>
{%endblock maincontent%}