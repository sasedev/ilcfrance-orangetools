{% extends 'IlcfranceOrangetoolsResBundle::admin.template.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	<li><a href="{{ path('ilcfrance_orangetools_admin_homepage')}}"> {{ faIco('home')}} {{ 'ilcfrance.orangetools.admin.homepage.breadcrumb'|trans }}</a></li>
	<li class="active"><a href="{{ path('ilcfrance_orangetools_admin_groupmodule_list')}}"> {{ faIco('object-group')}} {{ 'ilcfrance.orangetools.admin.Groupmodule.list.breadcrumb'|trans }}</a></li>
</ol>
{%endblock breadcrumb%}
{%block maincontent%}
<div class="row">
	<div class="col-lg-12">
		<div class="well well-sm text-right">
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_list') }}" class="btn btn-default">{{ faIco('list') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_export') }}" class="btn btn-default">{{ faIco('file-excel-o') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_addGet') }}" class="btn btn-default">{{ faIco('plus') }}</a>
			<a href="{{ path('ilcfrance_orangetools_admin_groupmodule_importGet') }}" class="btn btn-default">{{ faIco('plus-circle') }}</a>
		</div>
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">{{ faIco('object-group')}} <i class="fa fa-list text-aqua"></i> {{ 'ilcfrance.orangetools.admin.Groupmodule.list.tlabel'|trans|raw}}</h3>
			</div>
			<div class="box-body table-responsive">
				<table id="groupmoduleList" class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>{{ 'ilcfrance.orangetools.admin.Groupmodule.name.label'|trans|raw }}</th>
							<th>{{ 'ilcfrance.orangetools.admin.Groupmodule.moduleformations.label'|trans|raw }}</th>
							<th>{{ 'ilcfrance.orangetools.admin.Groupmodule.dtCrea.label'|trans|raw }}</th>
							<th>{{ 'actions.label'|trans|raw }}</th>
						</tr>
					</thead>
					<tbody>
					{% if groupmodules|length != 0 %}
						{% for groupmodule in groupmodules %}
						<tr>
							<td>{{ groupmodule.name }}</td>
							<td class="text-right">{% if groupmodule.moduleformations|length == 0%}{{ groupmodule.moduleformations|length }}{% else %}<a href="{{ path('ilcfrance_orangetools_admin_moduleformation_listByGroupmodule', {'id': groupmodule.id}) }}">{{ groupmodule.moduleformations|length }}</a>{% endif %}</td>
							<td class="text-right">{{ groupmodule.dtCrea|date('Y-m-d') }} {{ faIco('at') }} {{ groupmodule.dtCrea|localeDate('none', 'long') }}</td>
							<td class="text-right">
								<a class="btn btn-sm btn-info" href="{{path('ilcfrance_orangetools_admin_groupmodule_editGet',{'id':groupmodule.id})}}">{{ faIco('edit') }} {{ 'action.edit'|trans }}</a>
								<a class="btn btn-sm btn-danger deleteConfirmGroupmodule" href="{{path('ilcfrance_orangetools_admin_groupmodule_delete',{'id':groupmodule.id})}}">{{ faIco('trash') }} {{ 'action.delete'|trans }}</a>
							</td>
						</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="4">{{ 'ilcfrance.orangetools.admin.Groupmodule.empty'|trans|raw }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmGroupmodule" class="modal fade in" tabindex="-1" style="display: none;">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="text-center">{{'ilcfrance.orangetools.admin.Groupmodule.delete.confirm.title'|trans|raw}}</h3>
	</div>
	<div class="modal-body">
		{{'ilcfrance.orangetools.admin.Groupmodule.delete.confirm.txt'|trans|raw}}
	</div>
	<div class="modal-footer">
		<a href="" class="btn btn-xs btn-danger danger">{{'action.ok'|trans|raw}}</a>
		<button type="button" class="btn btn-xs btn-default" data-dismiss="modal">{{'action.cancel'|trans|raw}}</button>
	</div>
</div>
{%endblock maincontent%}
