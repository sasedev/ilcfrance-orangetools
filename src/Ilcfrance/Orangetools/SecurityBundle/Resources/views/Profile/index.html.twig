{% extends 'IlcfranceOrangetoolsResBundle::admin.template.html.twig' %}
{%block breadcrumb%}
<ol class="breadcrumb">
	{% if is_granted('ROLE_ADMIN') %}
	<li><a href="{{ path('ilcfrance_orangetools_admin_homepage')}}"> {{ faIco('home')}} {{ 'ilcfrance.orangetools.admin.homepage.breadcrumb'|trans }}</a></li>
	{% else %}
	<li><a href="{{ path('ilcfrance_orangetools_front_homepage')}}"> {{ faIco('home')}} {{ 'ilcfrance.orangetools.front.homepage.breadcrumb'|trans }}</a></li>
	{% endif %}
	<li class="active"><a href="{{ path('ilcfrance_orangetools_security_profile')}}"> {{ 'ilcfrance.orangetools.security.profile.breadcrumb'|trans}}</a></a></li>
</ol>
{%endblock breadcrumb%}
{%block maincontent%}
<div class="row">
	<div class="col-md-12">
		<div class="nav-tabs-custom">
			<ul class="nav nav-tabs">
				<li{%if tabActive==1%} class="active"{%endif%}><a href="#overview" data-toggle="tab">{{ 'ilcfrance.orangetools.security.profile.tab.overview'|trans }}</a></li>
				<li{%if tabActive==2%} class="active"{%endif%}><a href="#update" data-toggle="tab">{{ 'ilcfrance.orangetools.security.profile.tab.edit'|trans }}</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade{%if tabActive==1%} in active{%endif%}" id="overview">
					<div class="box-header"><h3 class="box-title"><i class="fa fa-user text-aqua"></i> {{ 'ilcfrance.orangetools.security.profile.tlabel.overview'|trans }}</h3></div>
					<div class="box-body">
						<div class="row">
							<div class="col-lg-3 text-right">{{'User.username'|trans }} :</div>
							<div class="col-lg-9">{{user.username}}</div>
							<div class="col-lg-3 text-right">{{'User.email'|trans}} :</div>
							<div class="col-lg-9">
								<a href="mailto:{{user.email}}">{{user.email}}</a>
							</div>
							<div class="col-lg-3 text-right">{{'User.dtCrea'|trans}} :</div>
							<div class="col-lg-9">{{user.dtCrea|localeDate('long')}} {{faIco('at')}} {{user.dtCrea|localeDate('none','long')}}</div>
							<div class="col-lg-3 text-right">{{'User.logins'|trans}} :</div>
							<div class="col-lg-9">{{user.logins}}</div>
							<div class="col-lg-3 text-right">{{'User.lastLogin'|trans}} :</div>
							<div class="col-lg-9">{{user.lastLogin|localeDate('long')}} {{faIco('at')}} {{user.lastLogin|localeDate('none', 'long')}}</div>
						</div>
						<div class="row">
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.lastName'|trans}} :</div>
							<div class="col-lg-9">{{user.lastName}}</div>
							<div class="col-lg-3 text-right">{{'User.firstName'|trans}} :</div>
							<div class="col-lg-9">{{user.firstName}}</div>

							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.phone'|trans}} :</div>
							<div class="col-lg-9">
								{%if user.phone is not null%}{{faIco('phone')}} <a href="tel:{{user.phone}}">{{user.phone}}</a>{%else%}{{bsLabelWarning('value.null'|trans|raw)}}{%endif%}
							</div>

							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.mobile'|trans}} :</div>
							<div class="col-lg-9">
								{%if user.mobile is not null%}{{faIco('mobile')}} <a href="tel:{{user.mobile}}">{{user.mobile}}</a>{%else%}{{bsLabelWarning('value.null'|trans|raw)}}{%endif%}
							</div>
						</div>
						{% if is_granted('ROLE_TRAINEE') %}
						<div class="row">
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.job'|trans}} :</div>
							<div class="col-lg-9">
								{%if user.job is not empty %}{{user.job}}{%else%}{{bsLabel('value.null'|trans|raw)}}{%endif%}
							</div>
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.level'|trans}} :</div>
							<div class="col-lg-9">
								{%if user.level is not empty %}{{user.level}}{%else%}{{bsLabel('value.null'|trans|raw)}}{%endif%}
							</div>
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.validUntil'|trans}} :</div>
							<div class="col-lg-9">
								{%if user.validUntil is not empty %}{{user.validUntil|localeDate('long')}} {{faIco('at')}} {{user.validUntil|localeDate('none', 'long')}}{%else%}{{bsLabel('value.null'|trans|raw)}}{%endif%}
							</div>
						</div>
						{% if user.modulepreinscriptions|length != 0 %}
						<div class="row">
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.modulepreinscriptions'|trans}} :</div>
							<div class="col-lg-9">
								<ul>
									{% for modulepreinscription in user.modulepreinscriptions %}
									<li>
										{{ modulepreinscription.moduleformation.code }} - {{ modulepreinscription.moduleformation.title }}
										{%if modulepreinscription.moduleformation.description is not empty %}{{ modulepreinscription.moduleformation.description|raw }}{% else %}<br/>{% endif %}
										<br/>
									</li>
									{% endfor %}
								</ul>
							</div>
						</div>
						{% endif %}
						{% if user.sessioninscriptions|length != 0 %}
						<div class="row">
							<div class="col-lg-12"><br></div>
							<div class="col-lg-3 text-right">{{'User.sessioninscriptions'|trans}} :</div>
							<div class="col-lg-9">
								<ul>
									{% for sessioninscription in user.sessioninscriptions %}
									<li>
										{{ sessioninscription.sessionformation.code }} - {{ sessioninscription.sessionformation.title }}<br/>
										<b>{{ sessioninscription.sessionformation.location|raw }}</b>: <b>{{ sessioninscription.sessionformation.dtStart|localeDate('long') }}</b> {{faIco('at')}} <b>{{ sessioninscription.sessionformation.dtStart|localeDate('none', 'long') }}</b><br/>
										{%if sessioninscription.sessionformation.dtInfo is not empty %}{{ sessioninscription.sessionformation.dtInfo }}<br/>{% endif %}
										{%if sessioninscription.sessionformation.conditionsReport is not empty %}{{ sessioninscription.sessionformation.conditionsReport }}<br/>{% endif %}
										{%if sessioninscription.sessionformation.phoneContactCenter is not empty %}{{ sessioninscription.sessionformation.phoneContactCenter }}<br/>{% endif %}
										{%if sessioninscription.sessionformation.otherInfos is not empty %}{{ sessioninscription.sessionformation.otherInfos|raw }}<br/>{% endif %}
										<br/>
									</li>
									{% endfor %}
								</ul>
							</div>
						</div>
						{% endif %}
						{% endif %}
					</div>
				</div>
				<div class="tab-pane fade{%if tabActive==2%} in active{%endif%}" id="update">
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title"> <i class="fa fa-edit text-red"></i> {{'ilcfrance.orangetools.security.profile.tlabel.updateEmail'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(UserUpdateEmailForm, {'method':'POST', 'action': path('ilcfrance_orangetools_security_profile_post'), 'style': 'horizontal'})}}
							{{form_row(UserUpdateEmailForm.email, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdateEmailForm.email.placeholder'}, 'input_group': {'append': faIco('envelope')} })}}
							<div class="row">
								<div class="col-lg-offset-4 col-lg-4"><button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.security.UserUpdateEmailForm.btnSubmit'|trans|raw}}</button></div>
							</div>
							{{form_end(UserUpdateEmailForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title"> <i class="fa fa-edit text-red"></i> {{'ilcfrance.orangetools.security.profile.tlabel.updatePassword'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(UserUpdatePasswordForm, {'method':'POST', 'action': path('ilcfrance_orangetools_security_profile_post'), 'style': 'horizontal'})}}
							{{form_row(UserUpdatePasswordForm.oldPassword, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdatePasswordForm.oldPassword.placeholder'}, 'input_group': {'append': faIco('lock')} })}}
							{{form_row(UserUpdatePasswordForm.clearPassword, {'label_col': 4, 'widget_col': 8} )}}
							<div class="row">
								<div class="col-lg-offset-4 col-lg-4"><button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.security.UserUpdatePasswordForm.btnSubmit'|trans|raw}}</button></div>
							</div>
							{{form_end(UserUpdatePasswordForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title"> <i class="fa fa-edit text-red"></i> {{'ilcfrance.orangetools.security.profile.tlabel.updateInfos'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(UserUpdateInfosForm, {'method':'POST', 'action': path('ilcfrance_orangetools_security_profile_post'), 'style': 'horizontal'})}}
							{{form_row(UserUpdateInfosForm.lastName, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdateInfosForm.lastName.placeholder'}, 'input_group': {'append': faIco('info-circle')} })}}
							{{form_row(UserUpdateInfosForm.firstName, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdateInfosForm.firstName.placeholder'}, 'input_group': {'append': faIco('info-circle')} })}}
							<div class="row">
								<div class="col-lg-offset-4 col-lg-4"><button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.security.UserUpdateInfosForm.btnSubmit'|trans|raw}}</button></div>
							</div>
							{{form_end(UserUpdateInfosForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title"> <i class="fa fa-edit text-red"></i> {{'ilcfrance.orangetools.security.profile.tlabel.updatePhone'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(UserUpdatePhoneForm, {'method':'POST', 'action': path('ilcfrance_orangetools_security_profile_post'), 'style': 'horizontal'})}}
							{{form_row(UserUpdatePhoneForm.phone, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdatePhoneForm.phone.placeholder'}, 'input_group': {'append': faIco('phone')} })}}
							<div class="row">
								<div class="col-lg-offset-4 col-lg-4"><button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.security.UserUpdatePhoneForm.btnSubmit'|trans|raw}}</button></div>
							</div>
							{{form_end(UserUpdatePhoneForm)}}
						</div>
					</div>
					<div class="panel box box-danger">
						<div class="box-header"><h3 class="box-title"> <i class="fa fa-edit text-red"></i> {{'ilcfrance.orangetools.security.profile.tlabel.updateMobile'|trans}}</h3></div>
						<div class="box-body">
							{{form_start(UserUpdateMobileForm, {'method':'POST', 'action': path('ilcfrance_orangetools_security_profile_post'), 'style': 'horizontal'})}}
							{{form_row(UserUpdateMobileForm.mobile, {'label_col': 4, 'widget_col': 8, 'attr': {'placeholder': 'ilcfrance.orangetools.security.UserUpdateMobileForm.mobile.placeholder'}, 'input_group': {'append': faIco('mobile')} })}}
							<div class="row">
								<div class="col-lg-offset-4 col-lg-4"><button class="btn btn-danger btn-block btn-flat" type="submit">{{faIco('floppy-o')}} {{'ilcfrance.orangetools.security.UserUpdateMobileForm.btnSubmit'|trans|raw}}</button></div>
							</div>
							{{form_end(UserUpdateMobileForm)}}
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
{%endblock maincontent%}
